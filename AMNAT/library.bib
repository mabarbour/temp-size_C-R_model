@article{Jones2008a,
abstract = {BACKGROUND: Rapid human-induced changes in the environment at local, regional and global scales appear to be contributing to population declines and extinctions, resulting in an unprecedented biodiversity crisis. Although in the short term populations can respond ecologically to environmental alterations, in the face of persistent change populations must evolve or become extinct. Existing models of evolution and extinction in changing environments focus only on single species, even though the dynamics of extinction almost certainly depend upon the nature of species interactions.

