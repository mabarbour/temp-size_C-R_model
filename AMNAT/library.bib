journal = {Frontiers in Genetics},
keywords = {ecological speciation,flow,genetic hitchhiking,genomic architecture,genomic islands of divergence,inversions,linkage disequil,linkage disequilibrium,models,speciation-with-gene-},
month = {jan},
pages = {295},
pmid = {25206365},
title = {{Assessing when chromosomal rearrangements affect the dynamics of speciation: implications from computer simulations}},
