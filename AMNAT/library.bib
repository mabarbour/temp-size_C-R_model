pages = {213--229},
pmid = {17448502},
title = {{A general multi-trait-based framework for studying the effects of biodiversity on ecosystem functioning}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=2041898&tool=pmcentrez&rendertype=abstract},
